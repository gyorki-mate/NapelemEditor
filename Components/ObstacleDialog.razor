<MudDialog>
    <DialogContent>
        <Mudtext>@Content</Mudtext>
        <MudNumericField T = "int" Label="Width" @bind-Value="@Width"></MudNumericField>
        <MudNumericField T = "int" Label="Height" @bind-Value="@Height"></MudNumericField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => MudDialog.Cancel())">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    //save the width and height parameters

    [Parameter]
    public string Content { get; set; } = "";

    [Parameter]
    public int Height { get; set; } = 100;

    [Parameter]
    public int Width { get; set; } = 100;

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(new Tuple<int,int>(Height,Width)));
    }
}