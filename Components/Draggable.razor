@using NapelemEditor.Interfaces
@inject IMouseService MouseSrv;

<g transform="translate(@_x, @_y)" cursor=@_cursor @onmousedown=OnDown
   @onmousedown:stopPropagation="true">
    @ChildContent
</g>

@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    double? _x;

    [Parameter]
    public double X
    {
        get => _x ?? 0;
        set
        {
            if (!_x.HasValue || (!IsDown & XChanged.HasDelegate))
            {
                _x = value;
            }
        }
    }

    [Parameter]
    public EventCallback<double> XChanged { get; set; }

    double? _y;

    [Parameter]
    public double Y
    {
        get => _y ?? 0;
        set
        {
            if (!_y.HasValue || (!IsDown & YChanged.HasDelegate))
            {
                _y = value;
            }
        }
    }

    [Parameter]
    public EventCallback<double> YChanged { get; set; }

    [Parameter]
    public int Height { get; set; }

    [Parameter]
    public int Width { get; set; }

    [Parameter]
    public bool IsLocked { get; set; }

    public double? lastX { get; set; }
    public double? lastY { get; set; }

    protected override void OnInitialized()
    {
        MouseSrv.OnMove += OnMove;
        MouseSrv.OnUp += Reset;
        MouseSrv.OnLeave += OnLeave;
        base.OnInitialized();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (!IsLocked) return;
        _cursor = "default";
        Dispose();
    }

    string _cursor = "grab";
    bool _isDown;

    bool IsDown
    {
        get => _isDown;
        set
        {
            _isDown = value;
            _cursor = _isDown ? "grabbing" : "grab";
        }
    }

    double _cursorX;
    double _cursorY;

    void OnDown(MouseEventArgs e)
    {
        if (IsLocked)
        {
            Dispose();
            return;
        }
        IsDown = true;
        _cursorX = e.ClientX;
        _cursorY = e.ClientY;
        lastX = _x;
        lastY = _y;
    }

    void Reset(object? _, MouseEventArgs e)
    {
        IsDown = false;

        if (!lastX.HasValue || !lastY.HasValue) return;
        XChanged.InvokeAsync(lastX.Value);
        YChanged.InvokeAsync(lastY.Value);
    }

    void OnLeave(object? _, MouseEventArgs e)
    {
        lastX = _x;
        lastY = _y;
        IsDown = false;
    }


    void OnMove(object? _, MouseEventArgs e)
    {
        if (!IsDown || IsLocked)
            return;

      
        _x -= _cursorX - e.ClientX;
        _y -= _cursorY - e.ClientY;
        

    //snap to grid
        if (_x % 10 != 0)
        {
            _x = Math.Round((double)(_x / 10)) * 10;
        }
        if (_y % 10 != 0)
        {
            _y = Math.Round((double)(_y / 10)) * 10;
        }

        _cursorX = e.ClientX;
        _cursorY = e.ClientY;

        XChanged.InvokeAsync(_x.Value);
        YChanged.InvokeAsync(_y.Value);
    }

    void Dispose()
    {
        MouseSrv.OnMove -= OnMove;
        MouseSrv.OnUp -= Reset;
        MouseSrv.OnLeave -= OnLeave;
    }

    //TODO might needed later
    bool CheckCollision(double newX, double newY, double otherX, double otherY, int otherWidth, int otherHeight)
    {
        double thisLeft = newX;
        double thisRight = newX + Width;
        double thisTop = newY;
        double thisBottom = newY + Height;

        double otherLeft = otherX;
        double otherRight = otherX + otherWidth;
        double otherTop = otherY;
        double otherBottom = otherY + otherHeight;

    // Check for collision by comparing the bounding boxes of the two objects
        return !(thisLeft > otherRight
                 || thisRight < otherLeft
                 || thisTop > otherBottom
                 || thisBottom < otherTop);
    }

}