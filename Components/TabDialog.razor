<MudDialog>
    <DialogContent>
        <MudForm @bind-IsValid="_success">
            <Mudtext>Add Tab</Mudtext>
            <MudTextField @bind-Value="_tabView.Name" Required="true" Label="Tab name"/>
            <MudSelect T="string" @bind-Value="_tabView.Orientation" Required="true" Label="Orientation">
                <MudSelectItem Value="@("North")"/>
                <MudSelectItem Value="@("South")"/>
                <MudSelectItem Value="@("West")"/>
                <MudSelectItem Value="@("East")"/>
                <MudSelectItem Value="@("Northeast")"/>
                <MudSelectItem Value="@("Northwest")"/>
                <MudSelectItem Value="@("Southwest")"/>
                <MudSelectItem Value="@("Southeast")"/>
            </MudSelect>
            <MudNumericField T = "string" Label="Width" @bind-Value="@_tabView.Width"></MudNumericField>
            <MudNumericField T = "string" Label="Height" @bind-Value="@_tabView.Height"></MudNumericField>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => MudDialog.Cancel())">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" Disabled="@(!_success)" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }
    
    private readonly TabView _tabView = new ();
    private bool _success;

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(_tabView));
    }
}