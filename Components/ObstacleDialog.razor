<MudDialog>
    <DialogContent>
        <Mudtext>@Content</Mudtext>
        <MudNumericField T = "int" Label="Width"  @bind-Value="@Width" Max="1000" Min="0" MaxLength="4"></MudNumericField>
        <MudNumericField T = "int" Label="Height" @bind-Value="@Height" Max="1000" Min="0" MaxLength="4"></MudNumericField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => MudDialog.Cancel())">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string Content { get; set; } = "";
    
    public int Height { get; set; } = 100;
    
    public int Width { get; set; } = 100;

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(new Tuple<int,int>(Width,Height)));
    }
}